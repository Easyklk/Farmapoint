<Window x:Class="Farmapoint.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Farmapoint"
        mc:Ignorable="d"
        Title="Window2"
        WindowState="Maximized"
        Background="WhiteSmoke">
    <Grid Width="700" Height="400">
        <Border BorderBrush="Black"
                Background="White"
                BorderThickness="1"
                CornerRadius="10">
            <Border.Effect>
                <DropShadowEffect />
            </Border.Effect>
        </Border>
        <Label x:Name="Title" Content="Farmapoint" HorizontalAlignment="Center" VerticalAlignment="Top" Height="64" Width="auto" FontSize="36" FontWeight="Bold" FontStyle="Italic"/>
        <DataGrid x:Name="grdDatos" HorizontalAlignment="Center" Width="550" Height="250" VerticalAlignment="Center" Loaded="DataRow_Loaded" IsReadOnly="True" AutoGenerateColumns="False" SelectionChanged="grdDatos_SelectionChanged" Background="White" BorderBrush="#FFA397A4" RowBackground="WhiteSmoke" Margin="75,119,75,31"/>
        <TextBlock HorizontalAlignment="Left" Margin="75,78,0,0" TextWrapping="Wrap" Text="Nombre:" VerticalAlignment="Top"/>
        <TextBlock x:Name="label_nombre" HorizontalAlignment="Left" Margin="121,78,0,0" TextWrapping="Wrap" Width="auto" VerticalAlignment="Top" Loaded="label_nombre_Loaded"/>
        <TextBlock HorizontalAlignment="Left" Margin="209,78,0,0" TextWrapping="Wrap" Text="Apellidos:" VerticalAlignment="Top"/>
        <TextBlock x:Name="label_apellido" HorizontalAlignment="Left" Margin="259,78,0,0" TextWrapping="Wrap" Width="auto" VerticalAlignment="Top" Loaded="label_apellido_Loaded"/>
        <TextBlock HorizontalAlignment="Left" Margin="433,78,0,0" TextWrapping="Wrap" Text="Código SNS:" VerticalAlignment="Top"/>
        <TextBlock x:Name="label_sns" HorizontalAlignment="Left" Margin="495,78,0,0" TextWrapping="Wrap" Width="auto" VerticalAlignment="Top" Loaded="label_codigosns_Loaded"/>

    </Grid>
</Window>
