<Window x:Class="Farmapoint.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Farmapoint"
        mc:Ignorable="d"
        Title="Window2"
        WindowState="Maximized"
        Background="WhiteSmoke">
    <Grid Width="700" Height="400">
        <Border BorderBrush="Black"
                Background="White"
                BorderThickness="1"
                CornerRadius="10">
            <Border.Effect>
                <DropShadowEffect />
            </Border.Effect>
        </Border>
        <Label x:Name="Title" Content="Farmapoint" HorizontalAlignment="Center" VerticalAlignment="Top" Height="64" Width="auto" FontSize="36" FontWeight="Bold" FontStyle="Italic"/>
        <DataGrid x:Name="grdDatos" HorizontalAlignment="Center" Width="550" Height="250" VerticalAlignment="Center" Loaded="DataRow_Loaded" IsReadOnly="True" AutoGenerateColumns="False" SelectionChanged="grdDatos_SelectionChanged" Background="White" BorderBrush="#FFA397A4" RowBackground="WhiteSmoke"/>
    </Grid>
</Window>
